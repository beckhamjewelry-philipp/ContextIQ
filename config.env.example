# CustomerIQ Configuration File
# Copy to config.env and customize for your deployment

# ====================
# Database Configuration
# ====================

# Database provider: 'sqlite' (single instance) or 'mssql' (multi-instance scaling)
DB_PROVIDER=sqlite

# SQLite configuration (for single-instance deployments)
SQLITE_PATH=~/.customeriq/customeriq.db

# MS SQL Server configuration (for multi-instance deployments)
MSSQL_SERVER=localhost
MSSQL_PORT=1433
MSSQL_DATABASE=CustomerIQ
MSSQL_USER=customeriq_user
MSSQL_PASSWORD=your_secure_password
MSSQL_ENCRYPT=true
MSSQL_TRUST_CERT=false

# ====================
# Service Configuration
# ====================

# MCP Server (AI Integration)
MCP_ENABLED=true

# REST API Server
API_ENABLED=true
API_PORT=3000
API_HOST=0.0.0.0

# ====================
# NATS Event Integration
# ====================

# Enable NATS event subscriber
NATS_ENABLED=false

# NATS server(s) - comma-separated for clustering
NATS_SERVERS=nats://localhost:4222

# NATS subjects to subscribe to (comma-separated)
NATS_SUBJECTS=customer.events.>

# Queue group for load balancing across multiple instances
NATS_QUEUE_GROUP=customeriq-service

# Auto-create customer profiles from events
NATS_AUTO_CREATE_CUSTOMER=true

# Character threshold for event summarization
NATS_SUMMARIZE_THRESHOLD=500

# ====================
# CRM Integration
# ====================

# Enable CRM sync
CRM_ENABLED=false

# CRM type: 'salesforce', 'hubspot', or 'generic'
CRM_TYPE=salesforce

# Sync interval in milliseconds (default: 300000 = 5 minutes)
CRM_SYNC_INTERVAL=300000

# ====================
# DevOps Control Interface
# ====================

# Control API (for DevOps integration & management)
CONTROL_ENABLED=true
CONTROL_PORT=9000
CONTROL_HOST=0.0.0.0

# Salesforce Configuration
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_USERNAME=your@email.com
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token

# HubSpot Configuration
HUBSPOT_API_KEY=your_hubspot_api_key

# Generic CRM API Configuration
CRM_API_URL=https://your-crm.com
CRM_API_KEY=your_api_key
CRM_CUSTOMERS_ENDPOINT=/api/v1/customers
CRM_AUTH_HEADER=Bearer your_api_key

# ====================
# Application Settings
# ====================

# Node environment
NODE_ENV=production

# Logging level
LOG_LEVEL=info
