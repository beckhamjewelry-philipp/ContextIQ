{
  "name": "copilot-memory-firebase-functions",
  "description": "Firebase Functions for Copilot Memory MCP Server",
  "version": "1.0.0",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "clean": "rimraf lib"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "better-sqlite3": "^11.3.0",
    "fuse.js": "^7.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "firebase-functions-test": "^3.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.3"
  },
  "private": true
}