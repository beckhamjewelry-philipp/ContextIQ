{
  "version": 2,
  "builds": [
    {
      "src": "api/dist/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/dist/index.js"
    },
    {
      "src": "/health",
      "dest": "api/dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATA_DIR": "/tmp/copilot-memory-data"
  }
}