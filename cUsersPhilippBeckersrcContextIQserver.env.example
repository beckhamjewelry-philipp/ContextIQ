# ContextIQ NATS Configuration

# Enable/disable NATS integration
NATS_ENABLED=true

# NATS server(s) - comma-separated list
NATS_SERVERS=nats://localhost:4222

# NATS subjects to subscribe to - comma-separated list
# Wildcard patterns supported:
#   customer.events.> matches customer.events.* and all sub-levels
#   customer.events.* matches only customer.events.{something}
NATS_SUBJECTS=customer.events.>

# Queue group name for load balancing across multiple instances
NATS_QUEUE_GROUP=contextiq-service

# Event processing options
# Character threshold for automatic summarization of event descriptions
NATS_SUMMARIZE_THRESHOLD=500

# Automatically create customer profiles if they don't exist
NATS_AUTO_CREATE_CUSTOMER=true

# Example: Multiple servers for high availability
# NATS_SERVERS=nats://server1:4222,nats://server2:4222,nats://server3:4222

# Example: Multiple subjects
# NATS_SUBJECTS=customer.events.>,billing.events.>,support.events.>
